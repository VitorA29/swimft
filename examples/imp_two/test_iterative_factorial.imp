# simple test for validate the working of a iterative fatorial
let var z = 1
in 
    let fn f(x) =
        let var y = x
        in      
            while not (y == 0)
            do 
                z := z * y
                y := y - 1
            end
        end
    in
        print(z)
        f(10)
        print(z)
    end
end